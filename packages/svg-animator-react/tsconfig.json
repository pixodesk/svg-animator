{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "experimentalDecorators": true,
        "noImplicitOverride": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "e2e"
    ]
}
