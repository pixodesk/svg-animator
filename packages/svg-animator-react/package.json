{
  "name": "@pixodesk/svg-animator-react",
  "version": "1.0.7",
  "description": "Pixodesk SVG animator for React",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixodesk/pixodesk-svg-animator",
    "directory": "packages/svg-animator-react"
  },
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "eslint src/ && tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:update": "npx playwright test --update-snapshots",
    "wip-test:e2e": "npx playwright test --grep @wip",
    "wip-test:e2e:ui": "npx playwright test --grep @wip --ui",
    "wip-test:e2e:update": "npx playwright test --grep @wip --update-snapshots"
  },
  "dependencies": {
    "@pixodesk/svg-animator-web": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.48.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^25.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
